{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "OpenOCD (Eclipse)",
            "type": "shell",
            "command": "${env:OPENOCD}",
            "args": [
                "-c", "gdb_port 3333",
                "-c", "tcl_port 3334", 
                "-c", "telnet_port 4444",
                "-s", "/home/vysocan/Projects/ChibiStudio/tools/openocd/scripts",
                "-f", "interface/stlink.cfg",
                "-f", "target/stm32f4x.cfg"
            ],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}
